generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id String @id 
  email String @unique
  name String?
  userBooks UserBook[]
  createdAt DateTime @default(now())
}

model Book {
  id String @id
  title String 
  // authors String[] 
  // // description String? 
  authors Author[]
  cover String?
  userBooks UserBook[]
}

model Author {
  id String @id 
  name String
  cover String?
  works Book[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt 
}

model UserBook {
  userId String 
  user User @relation(fields: [userId], references: [id])

  bookId String 
  book Book @relation(fields: [bookId], references: [id])

  status ReadingStatus @default(WANT_TO_READ)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt 
  
  @@id([userId, bookId]) // composite key
}


enum ReadingStatus {
  WANT_TO_READ
  CURRENTLY_READING
  READ 
}