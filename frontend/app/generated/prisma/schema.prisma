generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String     @id
  email     String     @unique
  name      String?
  userBooks UserBook[]
  reviews   Review[]
  createdAt DateTime   @default(now())
}

model Book {
  id          String       @id
  title       String
  // authors String[] 
  // // description String? 
  authors     Author[]
  cover       String?
  userBooks   UserBook[]
  authorBooks AuthorBook[]
  reviews     Review[]
}

model Author {
  id          String       @id
  name        String
  cover       String?
  works       Book[]
  authorBooks AuthorBook[]
  // createdAt DateTime? @default(now())
  // updatedAt DateTime? @updatedAt 
}

model UserBook {
  userId String
  user   User   @relation(fields: [userId], references: [id])

  bookId String
  book   Book   @relation(fields: [bookId], references: [id])

  status ReadingStatus @default(WANT_TO_READ)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@id([userId, bookId]) // composite key
}

// relation/join table to represent m-n relationship between books and authors
model AuthorBook {
  bookId String
  book   Book   @relation(fields: [bookId], references: [id])

  authorId String
  author   Author @relation(fields: [authorId], references: [id])

  // composite key 
  @@id([bookId, authorId])
}

model Review {
  // surrogate key
  id String @id

  rating    Int // 1-5 stars
  content   String?  @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  bookId String
  book   Book   @relation(fields: [bookId], references: [id], onDelete: Cascade)

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  // unique constraint
  @@unique([bookId, userId])
}

enum ReadingStatus {
  WANT_TO_READ
  CURRENTLY_READING
  READ
}
